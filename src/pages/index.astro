---
import { SOCIALS } from "../data/socials";
import Layout from "../layouts/Layout.astro";
import Drawer from "../components/Drawer.astro";
import Component from "../components/Component.astro";
import IconArrow from "../icons/arrow.astro";
---

<Layout title="KSHITIJ NARAYAN KULKARNI | Aspiring Full Stack Engineer">
  <main
    id="content"
    class="flex h-full min-h-screen flex-col items-center justify-center gap-8 py-10 px-4 sm:py-10 md:py-4 lg:gap-12 drawer drawer-end bg-gradient-to-br from-slate-50 to-gray-100"
  >
    <div class="flex flex-col items-center justify-center gap-6 mb-4">
      <h1
        class="hover-grad-text font-roboto-condensed uppercase font-semibold text-5xl lg:text-[7rem] lg:leading-[8rem]"
      >
        KSHITIJ N K
      </h1>
      <div
        class="flex w-full items-center justify-center overflow-hidden gap-2"
      >
        <p
          class="font-roboto-condensed font-medium lowercase text-2xl lg:text-[2rem] lg:leading-[2rem]"
        >
          learning
          <div class="group relative inline-block">
            <div
              class="transition-transform duration-300 group-hover:-translate-y-16"
            >
              <p
                class="font-roboto-condensed font-medium lowercase text-2xl lg:text-[2rem] lg:leading-[2rem]"
              >
                full stack development.
              </p>
            </div>
            <div
              class="absolute inset-x-0 top-0 w-max translate-y-16 transition-transform duration-300 group-hover:translate-y-0"
            >
              <p
                class="font-roboto-condensed font-medium lowercase text-2xl lg:text-[2rem] lg:leading-[2rem] bg-clip-text text-transparent bg-gradient-to-r from-pink-500 to-violet-500"
              >
                enthusiastically.
              </p>
            </div>
          </div>
        </p>
      </div>

      <!-- Skills showcase -->
      <div class="w-full max-w-3xl mx-auto">
        <div
          class="flex flex-wrap justify-center items-center gap-2 text-xs md:text-sm"
        >
          <!-- Languages -->
          <span
            class="tech-keyword px-3 py-1.5 bg-gray-50 text-gray-600 border border-gray-200 rounded-full hover:bg-gray-100 hover:shadow-sm transition-all duration-300 transform hover:-translate-y-0.5"
            >JavaScript</span
          >
          <span
            class="tech-keyword px-3 py-1.5 bg-gray-50 text-gray-600 border border-gray-200 rounded-full hover:bg-gray-100 hover:shadow-sm transition-all duration-300 transform hover:-translate-y-0.5"
            >TypeScript</span
          >
          <span
            class="tech-keyword px-3 py-1.5 bg-gray-50 text-gray-600 border border-gray-200 rounded-full hover:bg-gray-100 hover:shadow-sm transition-all duration-300 transform hover:-translate-y-0.5"
            >Python</span
          >
          <span
            class="tech-keyword px-3 py-1.5 bg-gray-50 text-gray-600 border border-gray-200 rounded-full hover:bg-gray-100 hover:shadow-sm transition-all duration-300 transform hover:-translate-y-0.5"
            >Go</span
          >
          <span
            class="tech-keyword px-3 py-1.5 bg-gray-50 text-gray-600 border border-gray-200 rounded-full hover:bg-gray-100 hover:shadow-sm transition-all duration-300 transform hover:-translate-y-0.5"
            >Rust</span
          >

          <!-- Frameworks -->
          <span
            class="tech-keyword px-3 py-1.5 bg-gray-50 text-gray-600 border border-gray-200 rounded-full hover:bg-gray-100 hover:shadow-sm transition-all duration-300 transform hover:-translate-y-0.5"
            >React</span
          >
          <span
            class="tech-keyword px-3 py-1.5 bg-gray-50 text-gray-600 border border-gray-200 rounded-full hover:bg-gray-100 hover:shadow-sm transition-all duration-300 transform hover:-translate-y-0.5"
            >React Native</span
          >
          <span
            class="tech-keyword px-3 py-1.5 bg-gray-50 text-gray-600 border border-gray-200 rounded-full hover:bg-gray-100 hover:shadow-sm transition-all duration-300 transform hover:-translate-y-0.5"
            >Node.js</span
          >
          <span
            class="tech-keyword px-3 py-1.5 bg-gray-50 text-gray-600 border border-gray-200 rounded-full hover:bg-gray-100 hover:shadow-sm transition-all duration-300 transform hover:-translate-y-0.5"
            >Express.js</span
          >
          <span
            class="tech-keyword px-3 py-1.5 bg-gray-50 text-gray-600 border border-gray-200 rounded-full hover:bg-gray-100 hover:shadow-sm transition-all duration-300 transform hover:-translate-y-0.5"
            >Next.js</span
          >
          <span
            class="tech-keyword px-3 py-1.5 bg-gray-50 text-gray-600 border border-gray-200 rounded-full hover:bg-gray-100 hover:shadow-sm transition-all duration-300 transform hover:-translate-y-0.5"
            >Django</span
          >
          <span
            class="tech-keyword px-3 py-1.5 bg-gray-50 text-gray-600 border border-gray-200 rounded-full hover:bg-gray-100 hover:shadow-sm transition-all duration-300 transform hover:-translate-y-0.5"
            >FastAPI</span
          >
          <span
            class="tech-keyword px-3 py-1.5 bg-gray-50 text-gray-600 border border-gray-200 rounded-full hover:bg-gray-100 hover:shadow-sm transition-all duration-300 transform hover:-translate-y-0.5"
            >GraphQL</span
          >

          <!-- Databases -->
          <span
            class="tech-keyword px-3 py-1.5 bg-gray-50 text-gray-600 border border-gray-200 rounded-full hover:bg-gray-100 hover:shadow-sm transition-all duration-300 transform hover:-translate-y-0.5"
            >MongoDB</span
          >
          <span
            class="tech-keyword px-3 py-1.5 bg-gray-50 text-gray-600 border border-gray-200 rounded-full hover:bg-gray-100 hover:shadow-sm transition-all duration-300 transform hover:-translate-y-0.5"
            >PostgreSQL</span
          >
          <span
            class="tech-keyword px-3 py-1.5 bg-gray-50 text-gray-600 border border-gray-200 rounded-full hover:bg-gray-100 hover:shadow-sm transition-all duration-300 transform hover:-translate-y-0.5"
            >Firebase</span
          >

          <!-- DevOps & Tools -->
          <span
            class="tech-keyword px-3 py-1.5 bg-gray-50 text-gray-600 border border-gray-200 rounded-full hover:bg-gray-100 hover:shadow-sm transition-all duration-300 transform hover:-translate-y-0.5"
            >Docker</span
          >
          <span
            class="tech-keyword px-3 py-1.5 bg-gray-50 text-gray-600 border border-gray-200 rounded-full hover:bg-gray-100 hover:shadow-sm transition-all duration-300 transform hover:-translate-y-0.5"
            >Kubernetes</span
          >

          <span
            class="tech-keyword px-3 py-1.5 bg-gray-50 text-gray-600 border border-gray-200 rounded-full hover:bg-gray-100 hover:shadow-sm transition-all duration-300 transform hover:-translate-y-0.5"
            >CircleCI</span
          >

          <span
            class="tech-keyword px-3 py-1.5 bg-gray-50 text-gray-600 border border-gray-200 rounded-full hover:bg-gray-100 hover:shadow-sm transition-all duration-300 transform hover:-translate-y-0.5"
            >Prometheus</span
          >
          <span
            class="tech-keyword px-3 py-1.5 bg-gray-50 text-gray-600 border border-gray-200 rounded-full hover:bg-gray-100 hover:shadow-sm transition-all duration-300 transform hover:-translate-y-0.5"
            >Grafana</span
          >
        </div>
      </div>

      <!-- Creative honeycomb-like layout -->
      <div class="grid grid-cols-1 md:grid-cols-12 gap-4 w-full max-w-6xl">
        <!-- About section - spans 4 columns on md+ -->
        <section
          id="about"
          aria-label="About me"
          class="group md:col-span-4 flex h-auto md:h-60 w-full rotate-0 sm:-rotate-1 flex-col rounded-3xl border-4 border-white bg-rose-50 sm:bg-stone-100 p-5 transition-all sm:hover:rotate-0 sm:hover:bg-rose-50 shadow-lg hover:shadow-xl"
        >
          <div class="flex lg:items-start gap-3 flex-row items-center">
            <img
              class="aspect-square size-12 md:size-14 rounded-full grayscale-0 scale-110 sm:grayscale sm:scale-100 transition-all sm:group-hover:scale-110 sm:group-hover:grayscale-0"
              src="/images/picofme.png"
              alt="Kshitij Narayan Kulkarni"
            />
            <div class="flex flex-col items-start">
              <p
                class="font-roboto-condensed font-semibold text-base md:text-lg text-rose-600 sm:text-inherit sm:group-hover:text-rose-600"
              >
                KSHITIJ NARAYAN KULKARNI
              </p>
              <p
                class="font-roboto-condensed font-medium text-sm md:text-base text-rose-600 sm:text-inherit sm:group-hover:text-rose-600"
              >
                Aspiring Full Stack Engineer
              </p>
            </div>
          </div>
          <p
            class="font-roboto-condensed font-thin text-sm md:text-base mt-3 text-rose-600 sm:text-inherit sm:group-hover:text-rose-600 leading-relaxed"
          >
            I'm Kshitij Narayan Kulkarni, a CSE undergrad passionate about Full
            Stack Development and DSA, focusing on backend tech like Node.js,
            Go, and Rust, while building projects and exploring DevOps tools.
          </p>
        </section>

        <!-- Education card - spans 4 columns on md+ -->
        <div
          class="group overflow-hidden relative flex gap-2 h-auto md:h-60 md:col-span-4 flex-col rounded-3xl border-4 border-white sm:bg-stone-100 p-5 transition-all bg-emerald-50 rotate-0 sm:rotate-1 sm:hover:rotate-0 sm:hover:bg-emerald-50 shadow-lg hover:shadow-xl justify-center"
        >
          <h3
            class="font-roboto-condensed font-semibold text-base md:text-lg text-emerald-700 sm:text-inherit sm:group-hover:text-emerald-700 mb-2"
          >
            Education
          </h3>
          <p
            class="font-roboto-condensed font-medium text-sm md:text-base text-emerald-700 sm:text-inherit sm:group-hover:text-emerald-700"
          >
            B.E. in Computer Science
          </p>
          <p
            class="flex gap-2 font-roboto-condensed text-sm text-emerald-700 sm:text-inherit sm:group-hover:text-emerald-700 mt-1"
          >
            <a
              data-ccursor
              href="https://www.dsce.edu.in/"
              target="_blank"
              rel="noreferrer"
              aria-label="DSCE (opens in a new tab)"
              class="inline-flex z-10 rounded-md font-roboto-condensed font-medium text-sm group-hover:text-emerald-900 hover:underline"
              >Dayananda Sagar College of Engineering</a
            >
          </p>
          <p
            class="font-roboto-condensed text-sm text-emerald-700 sm:text-inherit sm:group-hover:text-emerald-700 mt-1"
          >
            2022 - 2026 (Expected)
          </p>
          <p
            class="font-roboto-condensed text-xs text-emerald-600 sm:text-zinc-600 sm:group-hover:text-emerald-600 mt-auto italic"
          >
            Learning to convert caffeine into code while debugging issues that
            worked perfectly yesterday
          </p>
        </div>

        <!-- Social media card - spans 4 columns on md+ -->
        <div
          aria-label="Social media"
          class="flex group flex-wrap h-auto md:h-60 md:col-span-4 flex-col rounded-3xl border-4 border-white p-5 transition-all rotate-0 bg-indigo-50 sm:bg-stone-100 sm:-rotate-1 sm:hover:rotate-0 sm:hover:bg-indigo-50 shadow-lg hover:shadow-xl"
        >
          <h3
            class="font-roboto-condensed font-semibold text-base md:text-lg text-indigo-600 sm:text-inherit sm:group-hover:text-indigo-600 mb-3"
          >
            Let's Connect
          </h3>
          <p
            class="font-roboto-condensed text-sm text-indigo-600 sm:text-zinc-600 sm:group-hover:text-indigo-600 mb-3"
          >
            Find me on these platforms and let's collaborate!
          </p>
          <div class="grid grid-cols-3 gap-3 w-full mt-auto">
            {
              SOCIALS.map((social) => (
                <a
                  data-ccursor
                  class="flex flex-col items-center justify-center rounded-lg p-2 hover:bg-white hover:bg-opacity-70 transition-all transform hover:-translate-y-1 hover:shadow-sm"
                  href={social.url}
                  target="_blank"
                  rel="noreferrer noopener"
                  aria-label={`${social.name} (opens in a new tab)`}
                  data-umami-event={`${social.name} click`}
                  id={social.name}
                >
                  <div class="w-8 h-8 md:w-9 md:h-9 mb-1">
                    <Component component={social.icon} />
                  </div>
                  <span class="font-roboto-condensed text-xs font-medium text-indigo-700 sm:text-zinc-700 sm:group-hover:text-indigo-700">
                    {social.name}
                  </span>
                </a>
              ))
            }
          </div>
        </div>

        <!-- Contact card - spans 4 columns on md+ -->
        <div
          class="group overflow-hidden flex h-auto md:h-60 md:col-span-4 flex-col gap-3 rounded-3xl border-4 border-white sm:bg-stone-100 p-5 transition-all rotate-0 bg-amber-50 sm:-rotate-1 sm:hover:rotate-0 sm:hover:bg-amber-50 shadow-lg hover:shadow-xl"
        >
          <h3
            class="font-roboto-condensed font-semibold text-base md:text-lg text-amber-600 sm:text-inherit sm:group-hover:text-amber-600"
          >
            Contact Me
          </h3>
          <p
            class="font-roboto-condensed z-10 font-normal text-sm md:text-base text-amber-600 sm:text-inherit sm:group-hover:text-amber-600"
          >
            Let's connect and discuss opportunities!
          </p>
          <a
            data-ccursor
            class="inline-flex items-center justify-center gap-2 font-roboto-condensed px-3 py-2 text-sm md:text-base text-amber-600 sm:text-inherit sm:group-hover:text-amber-600 bg-white bg-opacity-20 border border-white border-opacity-30 rounded-lg shadow-lg backdrop-blur-sm hover:bg-opacity-30 transition-all duration-200 font-medium"
            href="mailto:knk200407@gmail.com"
            data-umami-event="Mail me click"
            id="mail"
          >
            <img
              class="aspect-square z-10 size-5 md:size-6 rounded-full"
              src="/images/gmail.webp"
              alt="Email"
            />
            knk200407@gmail.com
            <span
              class="w-2 h-2 rounded-full bg-green-400 duration-1000 animate-pulse"
            ></span>
          </a>
        </div>

        <!-- Location card - spans 4 columns on md+ -->
        <a
          href="https://www.google.co.in/maps/place/Pride+Crosswinds/@12.7801379,77.6007013,17z/data=!3m1!4b1!4m6!3m5!1s0x3bae6983ea2ad54f:0xe4c5f99cf630a243!8m2!3d12.7801327!4d77.6032762!16s%2Fg%2F11g6qgw76h?entry=ttu&g_ep=EgoyMDI1MDQwMi4xIKXMDSoASAFQAw%3D%3D"
          target="_blank"
          rel="noreferrer"
          aria-label="BENGALURU, INDIA"
          class="relative sm:cursor-none group overflow-hidden md:col-span-4 h-auto md:h-60 rounded-3xl border-4 border-white p-5 transition-all rotate-0 sm:rotate-1 sm:hover:rotate-0 shadow-lg hover:shadow-xl"
        >
          <div
            class="absolute inset-0 z-10 bg-[url('/images/bang1.jpg')] bg-center bg-cover bg-no-repeat filter grayscale-0 sm:grayscale sm:group-hover:grayscale-0"
          >
          </div>
          <div
            class="absolute z-30 left-1/2 top-1/2 h-[20px] w-[20px] -translate-x-1/2 -translate-y-1/2 rounded-full bg-blue-500 shadow-lg animate-pulse"
          >
          </div>
          <div
            class="absolute left-1/2 top-1/2 z-20 h-[30px] w-[30px] -translate-x-1/2 -translate-y-1/2 rounded-full border-4 border-blue-300 opacity-70 animate-ping"
          >
          </div>
          <div
            class="absolute left-1/2 top-1/2 z-30 h-[20px] w-[20px] -translate-x-1/2 -translate-y-1/2 rounded-full border-[3px] border-neutral-50 bg-blue-500 shadow-2xl"
          >
          </div>
          <div
            class="absolute top-5 left-5 z-30 bg-black bg-opacity-40 px-3 py-2 rounded-md"
          >
            <h3
              class="font-roboto-condensed font-semibold text-base md:text-lg text-white"
            >
              Location
            </h3>
            <p class="font-roboto-condensed text-sm md:text-base text-white">
              BENGALURU, INDIA
            </p>
          </div>
        </a>

        <!-- Projects card - spans 4 columns on md+ -->
        <div class="drawer-content md:col-span-4">
          <label
            for="experience-drawer"
            class="group relative sm:cursor-none overflow-hidden py-5 px-5 flex h-auto md:h-60 w-full flex-col gap-2 rounded-3xl border-4 border-white transition-all bg-fuchsia-100 rotate-0 sm:-rotate-1 sm:hover:rotate-0 sm:bg-stone-100 sm:hover:bg-fuchsia-100 shadow-lg hover:shadow-xl justify-center items-center"
            data-umami-event="Show my work click"
            id="experience"
          >
            <h3
              class="font-roboto-condensed font-semibold text-base md:text-lg text-fuchsia-500 sm:text-zinc-700 sm:group-hover:text-fuchsia-500"
            >
              My Projects
            </h3>
            <div class="flex flex-col items-center">
              <span
                class="inline-flex sm:cursor-none gap-2 items-center text-xl md:text-2xl font-bold font-serif italic sm:not-italic sm:group-hover:italic text-fuchsia-500 sm:text-zinc-500 sm:group-hover:text-fuchsia-500 rounded-lg transition-all duration-100"
                data-ccursor
              >
                Click to View
                <IconArrow />
              </span>
              <p
                class="font-roboto-condensed text-sm text-center text-fuchsia-500 sm:text-zinc-500 sm:group-hover:text-fuchsia-500 mt-2"
              >
                Explore my portfolio of web and mobile applications
              </p>
            </div>
          </label>
        </div>
      </div>
      <Drawer />
    </div>
  </main>
</Layout>
